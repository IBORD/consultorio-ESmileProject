<%= form_with(model: dentistum, class: "contents") do |form| %>
  <% if dentistum.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(dentistum.errors.count, "error") %> prohibited this dentistum from being saved:</h2>

      <ul>
        <% dentistum.errors.each do |error| %>
